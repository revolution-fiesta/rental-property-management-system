.bill-item {
  padding: 24rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  background: #fff;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.bill-header {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  font-weight: bold;
}

.bill-amount {
  color: #ff5722;
}

.bill-meta {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
}

.bill-status {
  font-size: 28rpx;
  font-weight: bold;
}

.paid {
  color: #4caf50;
}

.unpaid {
  color: #f44336;
}
