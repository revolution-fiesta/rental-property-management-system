<!--components/property-card/property_card.wxml-->
<view class="card">
  <image class="card-image" src="{{imageSrc}}" mode="aspectFill"></image>
  <view class="card-content">
    <view class="card-header">
      <view class="card-price">{{price}}元/月</view>
      <view class="card-actions">
        <view class="action-btn">{{tags}}</view>
      </view>
    </view>
    <view class="card-title">{{title}}</view>
    <view class="card-info">{{info}}</view>
  </view>
</view>