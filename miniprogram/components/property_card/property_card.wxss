/* components/property-card/property_card.wxss */
.card {
  display: flex;
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.card-image {
  width: 160rpx;  /* 设置图片宽度 */
  height: 160rpx; /* 设置图片高度 */
  object-fit: cover;
  border-radius: 8rpx;  /* 图片圆角 */
}

.card-content {
  flex: 1;  /* 使内容区填满剩余空间 */
  padding: 10rpx 15rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #f00;
}

.card-actions {
  display: flex;
}

.action-btn {
  padding: 4rpx 10rpx;
  background-color: #f7f7f7;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #333;
  margin-left: 10rpx;
}

.card-title {
  font-size: 28rpx;
  margin-top: 8rpx;
  color: #333;
}

.card-info {
  font-size: 24rpx;
  color: #777;
  margin-top: 4rpx;
}