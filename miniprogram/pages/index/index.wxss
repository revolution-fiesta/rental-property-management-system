/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

/* search bar */
/* 搜索框样式 */
.search-container {
  padding: 10rpx 20rpx;  /* 设置左右内边距，增加间距 */
  background-color: #E8F7F7;  /* 背景色 */
  border-radius: 50rpx;  /* 圆角 */
  margin-top: 10rpx;  /* 上边距，避免靠得太近 */
}


.bottom-content {
  font-size: 16px;
  color: #333;
}

.fixed-button {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 999;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 600rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #ccc;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  box-shadow: 0 -5rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
}

.picker-box {
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  text-align: center;
  background-color: #f8f8f8;
  color: #333;
  width: 100px;
}

.bottom-content {
  font-size: 16px;
  color: #333;
}


