/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

/* search bar */
/* 搜索框样式 */
.search-container {
  padding: 10rpx 20rpx;  /* 设置左右内边距，增加间距 */
  background-color: #E8F7F7;  /* 背景色 */
  border-radius: 50rpx;  /* 圆角 */
  margin-top: 10rpx;  /* 上边距，避免靠得太近 */
}

.search-input {
  width: 100%;  /* 填满父容器宽度 */
  padding: 10rpx 20rpx;  /* 输入框内边距 */
  background-color: #FFFFFF;  /* 背景白色 */
  border: none;  /* 去掉边框 */
  border-radius: 50rpx;  /* 圆角 */
  font-size: 28rpx;  /* 字体大小 */
  color: #A3A3A3;  /* 输入框文字颜色 */
  outline: none;  /* 去除聚焦时的边框 */
}

.search-input::placeholder {
  color: #A3A3A3;  /* 占位符颜色 */
}

.search-icon {
  position: absolute;
  left: 15rpx;  /* 图标位置 */
  top: 50%;
  transform: translateY(-50%);
  width: 20rpx;
  height: 20rpx;
  background: url('/images/search-icon.png') no-repeat center center;
  background-size: contain;
  pointer-events: none;  /* 禁用图标的点击事件 */
}


