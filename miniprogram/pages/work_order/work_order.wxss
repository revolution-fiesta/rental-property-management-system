.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.input-box {
  width: 100%;
  height: 150rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: white;
}

.submit-btn {
  width: 100%;
  padding: 20rpx;
  background: #ff5722;
  color: white;
  font-size: 32rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.work-order-history {
  margin-top: 40rpx;
  background: white;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.history-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.work-order-item {
  padding: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.work-order-item:last-child {
  border-bottom: none;
}

.date {
  font-size: 24rpx;
  color: #888;
}

.description {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-top: 5rpx;
}
