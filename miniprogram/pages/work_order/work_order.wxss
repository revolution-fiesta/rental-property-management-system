.container {
  padding: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx; /* 增加标题与内容的间距 */
}

.input-box {
  width: 100%;
  height: 120rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-bottom: 30rpx; /* 提高输入框与按钮的间距 */
}

.submit-btn {
  width: 100%;
  background-color: #FF5722;
  color: white;
  padding: 15rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-bottom: 50rpx; /* 提高按钮与工单历史的间距 */
}

.work-order-history {
  margin-top: 50rpx; /* 让工单历史和提交部分有明显间距 */
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx; /* 提高标题和工单列表的间距 */
}

.work-order-item {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx; /* 让每个工单之间的间距更大，提高可读性 */
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.work-order-header {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx; /* 让 ID 和类型更分明 */
}

.work-order-id {
  color: #555;
}


.work-order-content {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.status {
  font-size: 26rpx;
  font-weight: bold;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
}

.done {
  color: #4caf50;
}

.pending {
  color: #f44336;
}
