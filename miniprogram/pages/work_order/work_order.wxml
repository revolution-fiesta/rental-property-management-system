<view class="container">
  <text class="title">填写工单</text>
  <textarea class="input-box" placeholder="请输入工单内容" bindinput="onInput" value="{{workOrderText}}"></textarea>
  <button bindtap="submitOrder" class="submit-btn">提交</button>

  <!-- 工单历史 -->
  <view class="work-order-history">
    <text class="history-title">工单历史</text>
    <block wx:for="{{workOrders}}" wx:key="id">
      <view class="work-order-item">
        <text class="date">{{item.date}}</text>
        <text class="description">{{item.description}}</text>
      </view>
    </block>
  </view>
</view>
