.ticket-container {
  padding: 40rpx;
  background: #f5f5f5;
}

.header {
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.ticket-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ticket-item {
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 标题和操作按钮 */
.ticket-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.ticket-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
}

.resolve-btn {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  background: #ff5722;
  color: white;
  border: none;
}

.resolve-btn.disabled {
  background: #ccc;
}

/* 新增：房间 & 用户 ID */
.ticket-info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #444;
  margin-bottom: 5rpx;
}

.room {
  color: #888;
  font-weight: bold;
}

.user {
  color: #888;
}

/* 时间和描述 */
.ticket-meta {
  font-size: 28rpx;
  color: #666;
}

.date {
  display: block;
  margin-bottom: 5rpx;
  font-size: 26rpx;
  color: #999;
}

.desc {
  font-size: 28rpx;
  color: #444;
}
