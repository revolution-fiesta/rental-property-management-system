<view class="ticket-container">
  <view class="header">
    <text class="title">工单管理</text>
  </view>

  <view class="ticket-list">
    <block wx:for="{{tickets}}" wx:key="id">
      <view class="ticket-item">
        <!-- 工单标题 -->
        <view class="ticket-header">
          <text class="ticket-title">{{item.title}}</text>
          <text class="room">房间: {{item.room_name}}</text>

        </view>

        <!-- 房间名称 & 用户 ID -->
        <view class="ticket-info">
          <text class="user">用户 ID: {{item.user_id}}</text>
        </view>

        <!-- 创建时间 & 简单描述 -->
        <view class="ticket-meta">
          <text class="date">创建时间: {{item.created_at}}</text>
          <text class="desc">{{item.description}}</text>
        </view>
        <button 
            style="margin-top: 10px;"
            class="resolve-btn {{item.resolved ? 'disabled' : ''}}" 
            bindtap="markAsResolved" 
            data-id="{{item.id}}" 
            disabled="{{item.resolved}}">
            {{item.resolved ? "已处理" : "标记为已处理"}}
          </button>
      </view>
    </block>
  </view>
</view>
